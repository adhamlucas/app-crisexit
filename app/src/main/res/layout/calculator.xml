<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="430dp"
    android:minWidth="320dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvExpression"
            android:text="aaaa"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:textColor="@color/calculatorNumberButton"
            android:gravity="right"
            android:maxLines="1"
            android:paddingRight="10dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvClear"
            style="@style/CalculatorActionButtonStyle2"
            android:text="CE"/>
        <TextView
            android:id="@+id/tvOpen"
            style="@style/CalculatorActionButtonStyle2"
            android:text="("/>
        <TextView
            android:id="@+id/tvClose"
            style="@style/CalculatorActionButtonStyle2"
            android:text=")"/>
        <ImageButton
            android:id="@+id/tvBack"
            style="@style/CalculatorActionButtonStyle"
            android:src="@drawable/ic_backspace"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvSeven"
            style="@style/CalculatorNumberButtonStyle"
            android:text="7"/>
        <TextView
            android:id="@+id/tvEight"
            style="@style/CalculatorNumberButtonStyle"
            android:text="8"/>
        <TextView
            android:id="@+id/tvNine"
            style="@style/CalculatorNumberButtonStyle"
            android:text="9"/>
        <TextView
            android:id="@+id/tvDiv"
            style="@style/CalculatorActionButtonStyle"
            android:text="รท"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvFour"
            style="@style/CalculatorNumberButtonStyle"
            android:text="4"/>
        <TextView
            android:id="@+id/tvFive"
            style="@style/CalculatorNumberButtonStyle"
            android:text="5"/>
        <TextView
            android:id="@+id/tvSix"
            style="@style/CalculatorNumberButtonStyle"
            android:text="6"/>
        <TextView
            android:id="@+id/tvMulti"
            style="@style/CalculatorActionButtonStyle"
            android:text="ร"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvOne"
            style="@style/CalculatorNumberButtonStyle"
            android:text="1"/>
        <TextView
            android:id="@+id/tvTwo"
            style="@style/CalculatorNumberButtonStyle"
            android:text="2"/>
        <TextView
            android:id="@+id/tvThree"
            style="@style/CalculatorNumberButtonStyle"
            android:text="3"/>
        <TextView
            android:id="@+id/tvMinus"
            style="@style/CalculatorActionButtonStyle"
            android:text="-"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDot"
            style="@style/CalculatorNumberButtonStyle"
            android:text="."/>
        <TextView
            android:id="@+id/tvZero"
            style="@style/CalculatorNumberButtonStyle"
            android:text="0"/>
        <TextView
            android:id="@+id/tvEquals"
            style="@style/CalculatorNumberButtonStyle"
            android:text="="/>
        <TextView
            android:id="@+id/tvPlus"
            style="@style/CalculatorActionButtonStyle"
            android:text="+"/>



    </LinearLayout>

</LinearLayout>

